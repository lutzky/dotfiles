{{ if lookPath "delta" -}}
# Delta: https://github.com/dandavison/delta
[core]
	pager = delta
[diff]
	colorMoved = default
[interactive]
	diffFilter = delta --color-only
[delta]
	features = "decorations"
[delta "decorations"]
	keep-plus-minus-markers = true
