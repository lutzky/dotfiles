[color]
	ui = auto
[user]
	name = Ohad Lutzky
	email = ohad@lutzky.net
[alias]
	gl = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(yellow)%h%C(bold magenta)%d %C(reset)%C(blue)%ar %C(green)%an\n%C(reset)  %s'
	gla = gl --all
	graph = gl

	# From https://jordanelver.co.uk/blog/2020/06/04/fixing-commits-with-git-commit-fixup-and-git-rebase-autosquash/
	fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
	commitall = "!git add . && git commit -v"
	purr = pull --rebase
[log]
	decorate = true
[rebase]
	autosquash = true
[github]
	user = lutzky
[web]
	browser = google-chrome
[push]
	default = simple
[include]
	path = ~/.config/git/delta
	path = ~/.config/git/work
[init]
	defaultBranch = main
[rerere]
	enabled = true
